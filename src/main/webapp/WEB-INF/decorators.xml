<decorators defaultdir="/decorators">
    <excludes>
        <pattern>/index.html</pattern>
        <pattern>*.html</pattern>
    </excludes>
    
    <decorator name="main" page="main.ftl">
        <pattern>*</pattern>
    </decorator>
    
    <decorator name="ajax" page="ajax.ftl">
        <pattern>/user/Account*</pattern>
        <pattern>/user/Message_create.action</pattern>
        <pattern>/user/Blog_load.action</pattern>
        <pattern>/user/Comment_list.action</pattern>
        <pattern>/user/Comment_create.action</pattern>
    </decorator>
    <decorator name="onlyContext" page="onlyContext.ftl">
        <pattern>/user/Gallery_*</pattern>
    </decorator>
    
</decorators>
